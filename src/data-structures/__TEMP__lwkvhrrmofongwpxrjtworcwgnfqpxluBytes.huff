    0xbabe2babe2babe2babe2babe2babe2babe2babe2babe2babe2babe2babe2babe 0x40 mstore
    
    0x24 0x02 0x00
    SLICE_MEMORY()
        
    dup1 mload
    0x00 SET_STOR()
        
