#define macro SLICE_MEMORY_AND_SET1() = takes (0) returns (0) {
    pop
        
    0x20 0x00 mstore        
    0xbabe1babe1babe1babe1babe1babe1babe1babe1babe1babe1babe1babe1babe 0x20 mstore
    
    0x10 0x00 0x00                // [mem_ptr, start, length]
    SLICE_MEMORY()                // [slice_ptr]
        
    dup1 mload
    0x00 SET_STOR()
        
    dup1 0x20 add mload
    0x20 SET_STOR()
    
    stop
}

